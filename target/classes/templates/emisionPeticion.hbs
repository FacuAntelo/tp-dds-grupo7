{{#partial "titulo"}}
<title>Peticion</title>
{{/partial}}

{{#partial "contenido" }}
<div class="mb-md-5 mt-md-4 pb-5">
    <h2 class="fw-bold mb-2 text-uppercase">Peticion</h2>
    <label class="form-label" for="typeEmailX">Seleccione la organizacion</label>
    <form method="GET" action="/usuario/{{usuario.id}}/peticion/organizacion" enctype="multipart/form-data">
        <div class="elegirOrganizacion-container">
            <select class="form-select" aria-label="Default select example" name="idOrganizacion">
                <option selected>Organizacion a elegir</option>
                {{#each organizaciones}}
                <option type="submit" value="{{id}}">{{razonSocial}}</option>
                {{/each}}
            </select>
        </div>
        <button class="btn btn-outline-light btn-lg px-5" type="submit"
            href="/usuario/{{usuario.id}}/peticion">Siguiente</button>
    </form>
</div>
{{/partial}}
{{> baseLogin.hbs }}