{{#partial "titulo"}}
<title>Peticion</title>
{{/partial}}

{{#partial "contenido" }}
<div class="mb-md-5 mt-md-4 pb-5">
    <h2 class="fw-bold mb-2 text-uppercase">Peticion</h2>
    <label class="form-label" for="typeEmailX">Seleccione el sector al que pertenece</label>
    <form method="POST" action="/usuario/{{usuario.id}}/peticion/organizacion/{{organizacion.id}}">
        <div class="elegirOrganizacion-container">

            <select class="form-select" aria-label="Default select example" name="idSector">
                <option selected>Sector a elegir</option>
                {{#each sectores}}
                <option type="submit" value="{{id}}">{{nombre}}</option>
                {{/each}}
            </select>

        </div>
        <button class="btn btn-outline-light btn-lg px-5" type="submit" href"/usuario/{{usuario.id}}/peticion">Enviar</button>
    </form>
</div>
{{/partial}}
{{> baseLogin.hbs }}