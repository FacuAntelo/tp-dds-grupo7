{{#partial "contenido" }}
<div class="row my-5">
    <div class="col">
        <div class="my-3 p-3 bg-white rounded box-shadow">
            <h3 class="border-bottom border-gray pb-2 mb-0">Sectores</h3>
            {{#each sectores}}
                <div class="media text-muted pt-3" style="display: flex;">
                    <i class="bi bi-square-fill" style="color: blue;"></i>
                    <div class="media-body pb-3 mb-0 small lh-125 border-bottom border-gray">
                        <div class="d-flex justify-content-between align-items-center w-100">
                            <strong class="text-gray-dark">{{nombre}}</strong>
                            <a href="#">Editar</a>
                        </div>
                        <span class="d-block">miembros</span>
                    </div>
                </div>
            {{/each}}
            <form class="needs-validation" method="POST" action="/organizacion/{{organizacion.id}}/agregarSector" novalidate>
                <div class="input-group mb-3 mt-3">
                    <input type="text" class="form-control" placeholder="Nuevo sector" aria-label="Nuevo sector" aria-describedby="basic-addon2" name ="sector">
                    <div class="input-group-append">
                      <button class="btn btn-outline-secondary" type="submit">Button</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
{{/partial}}
{{> organizacion/baseOrganizacion.hbs }}